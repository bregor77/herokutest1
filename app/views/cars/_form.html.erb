    <%= form.label :year, style: "display: block" %>
    <%= form.number_field :year, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :Description_of_car, style: "display: block" %>
    <%= form.text_area :body, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :price_per_day_in_â‚¬, style: "display: block" %>
    <%= form.text_field :price, class:"form-control" %>
  </div>

