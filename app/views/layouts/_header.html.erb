<%# NAVIGATION BAR %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Car Rental", root_path, class:"navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class:"nav-link" %>
      </li>

      <% if current_user %>

      <%# Button "Show Cars" %>
      <li class="nav-item">
        <%= link_to "Show Cars", cars_path, class:"nav-link" %>
      </li>

      <%# Button "Sign Out" %>
      <li class="nav-item">
        <%= link_to "Sign out", destroy_user_session_path, 'data-turbo-method': :delete, class:"nav-link" %>
      </li>

      <%# Button "Edit Profile" %>
      <li class="nav-item">
        <%= link_to "Edit Profile", edit_user_registration_path, class:"nav-link" %>
      </li>

      <% else %>

      <%# Buttons "Sign Up" and "Login" displayed only if nobody is logged in %>
      <li class="nav-item">
        <%= link_to "Sign Up", new_user_registration_path, class:"nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class:"nav-link" %>
      </li>

    <% end %>
    
    </ul>

    <%# Displaying current logged user and user role %>
    <ul class="navbar-nav">
      <li class="nav-item nav-link">
        <% if current_user %>          
          Your are logged in as: <%= current_user.role %>  |  <%= current_user.email %>          
        <% end %>
      </li>
    </ul>
  </div>
</nav>